{
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "extends": ["prettier", "javascript-the-good-parts"],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "prettier/prettier": "error",
    "lines-between-class-members": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "prefer-destructuring": ["error", {"object": false, "array": false}]
  }
}